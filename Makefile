#-----------------------------------------------------------------------------
# Generic Makefile
#-----------------------------------------------------------------------------

#-----------------------------------------------------------------------------
# Set Compiler and Flags
#--------------------------------------------------------------------------
CC   = gcc
OPTS = -O0
DEBUG = -g

#--------------------------------------------------------------------
# Set up the Flags
#--------------------------------------------------------------------
CFLAGS   = $(OPTS) $(DEBUG)

#--------------------------------------------------------------------
# Set up the targets and prepare the compiling options
#--------------------------------------------------------------------
TARGETS=main testmalloc tmalloc2 tmalloc3 tinput tlimits read_data

all: $(TARGETS)

%: %.c 
	${CC} ${CFLAGS} $< -o $@ 

multi: multi_a.c multi_b.c
	${CC} ${CFLAGS} -o multi multi_a.c multi_b.c

header: header_a.c header_b.c
	${CC} ${CFLAGS} -o header header_a.c header_b.c

#--------------------------------------------------------------------
# Cleans objects and executables
#--------------------------------------------------------------------
clean:
	rm -f $(TARGETS)

